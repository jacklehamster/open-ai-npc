{
  "name": "open-ai-npc",
  "module": "src/index.ts",
  "description": "Testing openAI's API, with a \"dungeon master\".",
  "version": "1.0.2",
  "keywords": [
    "bun",
    "bunjs",
    "typescript",
    "template",
    "npm",
    "np",
    "publish",
    "git"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:jacklehamster/open-ai-npc.git"
  },
  "homepage": "https://jacklehamster.github.io/open-ai-npc/",
  "author": {
    "name": "Jack Le Hamster",
    "email": "jacklehamster@gmail.com"
  },
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "bun test",
    "build": "bun i && bun run fix-package-name && rm -rf *.tsbuildinfo && rm -rf dist/*.* && bun run bundler/bundler.ts && bun run test && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "fix-package-name": "npm explore package-name-fixer -- bun start \"$(pwd)\"",
    "auto-publish": "npm explore @dobuki/auto-publish -- bun run auto-publish \"$(pwd)\"",
    "openai": "OPENAI_API_KEY=$OPENAI_API_KEY bun run ./src/index.ts",
    "start": "bun run ./src/index.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@dobuki/auto-publish": "^1.0.7",
    "@types/bun": "^1.0.4",
    "@types/jest": "^29.5.6",
    "@types/mocha": "^10.0.3",
    "@types/node-persist": "^3.1.8",
    "@types/react": "^18.2.21",
    "bun": "^1.0.25",
    "bun-types": "^1.0.2",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "package-name-fixer": "^1.0.9",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "baojs": "^0.2.1",
    "node-persist": "^4.0.1",
    "openai": "^4.33.0",
    "serve-static-bun": "^0.5.3"
  }
}
