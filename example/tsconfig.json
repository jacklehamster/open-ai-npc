{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "",
    "module": "ES2015",
    "target": "ES2015",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [ "bun-types" ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
}
